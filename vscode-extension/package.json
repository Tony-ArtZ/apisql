{
  "name": "apisql-vscode",
  "displayName": "ApiSQL",
  "description": "Language support for ApiSQL",
  "version": "0.0.1",
  "publisher": "apisql",
  "repository": {
    "type": "git",
    "url": "https://github.com/apisql/apisql-vscode"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "apisql",
        "icon": {
          "light": "",
          "dark": ""
        },
        "aliases": [
          "ApiSQL",
          "apisql"
        ],
        "extensions": [
          ".apisql"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "apisql",
        "scopeName": "source.apisql",
        "path": "./syntaxes/apisql.tmLanguage.json"
      }
    ]
  },
  "activationEvents": [
    "onLanguage:apisql"
  ],
  "scripts": {
    "vscode:prepublish": "npm run build-server && npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "build-server": "cd .. && cargo build --release --bin lsp-backend && mkdir -p vscode-extension/bin && cp target/release/lsp-backend vscode-extension/bin/"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "@types/node": "^16.17.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  }
}
